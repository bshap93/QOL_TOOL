<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td>Body: <%= question.body %></td>
        <td>Category: <%= question.category %></td>
        <td><%= link_to 'Show', questionnaire_question_path(question.questionnaire.id, question.id) %></td>
        <% if question.questionnaire.id != 1 %>
          <td><%= link_to 'Edit', edit_questionnaire_question(question.questionnaire.id, question.id) %></td>
          <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', questionnaires_path %>
